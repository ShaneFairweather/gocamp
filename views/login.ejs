<% include partials/header.ejs %>

<div class="container">
    <div class='login userform'>
        <h1>Login</h1>
        <form action='/login' method='POST'>
            <div class="form-group">
                <label for="login-name">Username</label>
                <input class="form-control" type='text' id="login-name" name='username' placeholder='Username'>
            </div>
            <div class="form-group">
                <label for="login-password">Password</label>
                <input class="form-control" type='password' id="login-password" name='password' placeholder='Password'>
            </div>
            <input type='submit' class="userform-submit btn btn-lg" value='Submit'>
        </form>
    </div>
</div>

