<% include ../partials/header.ejs %>


<div class='container newCamp'>

<h1>Create A New Camp</h1>

<div class='row'>
    <div class='add'>
        <form action='/campgrounds' method='POST'>
            <div class='form-group'>
                <input class='form-control' type='text' name='name' placeholder='Add camp name'/> 
            </div>
            <div class='form-group'>
                <input class='form-control' type='text' name='image' placeholder='Add image url'/>
            </div>
            <div class='form-group'>
                <input class='form-control' type='text' name='description' placeholder='Add camp description'/>
            </div>
            <div class='form-group'>
                <button class='btn btn-primary btn-lg btn-block' id='addButton' type='submit'>Add</button>
            </div>
        </form>
        <a href='/campgrounds'><button class='btn'>Back</button></a>
    </div>

</div>


</div>


