<% include ../partials/header.ejs %>


<div class='container newCamp'>

<h1>Edit Comment</h1>

<div class='row'>
    <div class='add'>
        <form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
            <div class='form-group'>
                <input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'/> 
            </div>
            <div class='form-group'>
                <button class='btn btn-primary btn-lg btn-block' id='addButton' type='submit'>Add</button>
            </div>
        </form>
        <a href='/campgrounds'><button class='btn'>Back</button></a>
    </div>
</div>


</div>


