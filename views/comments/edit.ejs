<div class='container'>
    <div class='userform editComment'>
        <h1>Edit Comment</h1>
        <form action='/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
            <div class='form-group'>
                <input class='form-control' type='text' name='comment[text]' value='<%= comment.text %>'/> 
            </div>
            <button class='btn btn-primary btn-lg btn-block' id='addButton' type='submit'>Add</button>
            <a href='/campgrounds'><button class='btn btn-sm backBtn'>Back</button></a>
        </form>
    </div>
</div>

